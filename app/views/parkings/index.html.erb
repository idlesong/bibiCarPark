<%- model_class = Parking -%>
<div class="page-header">
  <h1>Parking records</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Plate</th>
      <th><%= model_class.human_attribute_name(:enter_time) %></th>
      <th><%= model_class.human_attribute_name(:exit_time) %></th>
      <th><%= model_class.human_attribute_name(:park_time) %></th>
      <th><%= model_class.human_attribute_name(:leave_time) %></th>
      <th>Receivable</th>
      <th>Received</th>
    </tr>
  </thead>
  <tbody>
    <% @parkings.each do |parking| %>
      <tr>
        <td><%= link_to parking.id, parking_path(parking) %></td>
        <td><i class="fa fa-car"></i> <%= parking.car.plate %></td>
        <td><%= parking.enter_time %></td>
        <td><%= parking.exit_time %></td>
        <td><%= parking.park_time %></td>
        <td><%= parking.leave_time %></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_parking_path,
            :class => 'btn btn-primary' %>
