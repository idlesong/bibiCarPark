<h1>Listing payments</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Unit price</th>
      <th>Total time</th>
      <th>Discount</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.unit_price %></td>
        <td><%= payment.total_time %></td>
        <td><%= payment.discount %></td>
        <td><%= payment.total %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>
