<h1>Listing nodes</h1>

<table>
  <thead>
    <tr>
      <th>Hardware</th>
      <th>Status</th>
      <th>Main hub</th>
      <th>Alt hub</th>
      <th>Monitor</th>
      <th>Display</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.hardware_id %></td>
        <td><%= node.status %></td>
        <td><%= node.main_hub %></td>
        <td><%= node.alt_hub %></td>
        <td><%= node.monitor %></td>
        <td><%= node.display %></td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Node', new_node_path %>
